<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../includes/head.ejs') %>
        <title>
            <%= pageTitle %>
        </title>
</head>

<body>
    <%- include('../includes/nav.ejs') %>
        <div class="wrapper pt-24 lg:pt-0">

            <h1 class="main-heading">Add New Unit</h1>
            <div>
                <% if(errMessage) {%>
                    <div class="alert alert-warning" role="alert">
                        <%= errMessage%>
                    </div>
                    <%}%>
            </div>
            <div class="bg-gray-100 grid grid-cols-2 my-3 p-4 rounded-lg">
                <form action="/teacher/units" id="addLessonform" method="POST" enctype="multipart/form-data">
                    <div class="form-group my-3">
                        <label for="grade">Select Grade</label>
                        <select class="input" name="grade" id="grade">
                            <option name="1" value="1">1</option>
                            <option name="2" value="2">2</option>
                            <option name="3" value="3">3</option>
                        </select>
                    </div>

                    <div class="form-group my-3">
                        <label for="exampleFormControlSelect2">Select Term</label>
                        <select class="input" name="term" id="exampleFormControlSelect2">
                            <option name="1" value="1">1</option>
                            <option name="2" value="2">2</option>
                        </select>
                    </div>

                    <div class="form-group my-3">
                        <label for="exampleFormControlTextarea3">Unit Name</label>
                        <input class="input" type="text" name="unitName" placeholder="Unit Name.."
                            id="exampleFormControlSelect3"
                            value="<% if (hasError) { %><%= oldInputs.unitName %><% } %>" />
                    </div>
                    <div class="form-group my-3">
                        <label for="exampleFormControlTextarea4">Select Unit Number</label>
                        <select class="input" name="unitNo" id="exampleFormControlTextarea4">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                            <option>6</option>
                            <option>7</option>
                            <option>8</option>
                            <option>9</option>
                            <option>10</option>
                        </select>
                    </div>
                    <div class="form-group my-3">
                        <label for="imgFile">Image:</label>
                        <input class="input" type="file" id="imgFile" name="image" />
                    </div>

                    <div class="form-group my-3">
                        <button type="submit" style="grid-column:1/3;" class="btn btn-success">
                            Add
                        </button>
                    </div>

                </form>
