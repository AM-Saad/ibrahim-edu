<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/studentProfile.css" />

    <title>
      <%= pageTitle%>
    </title>
</head>

<body>
  <%- include('../includes/nav.ejs') %>
    <div id="profile" class="wrapper pt-24 lg:pt-0">
      <% if(student) { %>
        <input type="hidden" name="studentIdNotifi" value="<%=user._id%>">
        <div class="jumbotron profile-header">

          <h1 class="display-5">
            <%= student.name %>
          </h1>
          <h2>
            <%=student.email%>
          </h2>

          <% if(errMessage){ %>
            <div id="messages">

              <div class="alert alert-warning">
                <%= errMessage %>
              </div>
            </div>
            <% } %>
              <hr class="my-4" />
              <div>
                <ul class="profile-header_list list-group list-group-horizontal-xl">
                  <li class="list-group-item">Grade:
                    <%=student.grade%>
                  </li>
                  <li class="list-group-item">Center:
                    <%=student.center%>
                  </li>

                </ul>
                <img id="profileImg" class="profile-image" src="/<%=student.image%>" alt="">
              </div>


        </div>
        <!-- update center form for teacher -->
        <%- include('../includes/exams.ejs') %>
          <% } %>

    </div>

    <%- include('../includes/end.ejs') %>
      <script src="/js/helpers/request.js"></script>
      <script src="/js/helpers/message.js"></script>
      <script src="/js/teacher/components/exams.js"></script>
      <script src="/js/studentExams.js"></script>
      <!-- <script>
    document.getElementById('editcenter').addEventListener('click', function () {
      if (document.getElementById('teacherUpdateStudentCenter').style.display === 'block') {

        document.getElementById('teacherUpdateStudentCenter').style.display = 'none'
      } else {
        document.getElementById('teacherUpdateStudentCenter').style.display = 'block'
      }
    })
  </script> -->
      <script>
        $(document).ready(function () {
          var small = {
            width: "100px",
            height: "100px",
            borderRadius: '50%',
            right: '10%',
            bottom: '1%',
            transform: 'translate(-10%, -1%)',
          };
          var large = {
            width: "auto",
            height: "400px",
            borderRadius: '0',
            right: '50%',
            bottom: '1%',
            transform: 'translate(-50%, -1%)',
          };
          var count = 1;
          $("#profileImg").css(small).on('click', function () {
            $(this).animate((count == 1) ? large : small);
            count = 1 - count;
          });
        });
      </script>
</body>

</html>