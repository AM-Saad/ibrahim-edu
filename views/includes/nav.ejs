              <% } %>


  </div>
</nav>



<script>
  const button = document.querySelector('.mobileMenuBtn')
  const clsMenu = document.querySelector('.closeMobileMenu')
  const sidebar = document.querySelector('.nav-mobile')
  const searchOpenBtn = document.querySelector('.search-interface_openBtn')
  const searchCloseBtn = document.querySelector('.search-interface_closeBtn')
  if (searchCloseBtn != null || searchOpenBtn != null) {

    if (button) {

      button.addEventListener('click', function () {
        sidebar.classList.toggle('is-hidden')
      })
    }
    if (clsMenu) {
      clsMenu.addEventListener('click', function () {
        sidebar.classList.toggle('is-hidden')
      })
    }
    searchOpenBtn.addEventListener('click', function () {
      document.querySelector('.search-interface').style.right = '0'
    })
    if (searchCloseBtn) {
      searchCloseBtn.addEventListener('click', function () {
        document.querySelector('.search-interface').style.right = '-100%'
      })
    }
  }

</script>