<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../includes/head.ejs') %>
        <link rel="stylesheet" type="text/css" href="/slick/slick.css" />
        <link rel="stylesheet" type="text/css" href="/slick/slick-theme.css" />
        <link rel="stylesheet" href="/css/units.css" />
        <title>
            <%= pageTitle%>
        </title>
</head>

<body>

    <%- include('../includes/nav.ejs') %>
        <div class="wrapper pt-24 lg:pt-0">
            <input type="hidden" name="studentIdNotifi" value="<%=user._id%>">

            <h1 class="main-heading">
                <%=unit.unitDetails.name%>
            </h1>
            <% if(lessons.length> 0 ){ %>
                <div class=" grid sm:grid-cols-2 lg:grid-cols-3 gap-4 my-3">
                    <% lessons.forEach(l=>{ %>
                        <a class="item" href="/lesson/<%= l._id %>">
                            <input type="hidden" name="lessonId" value="<%= l._id%>" id="">
                            <div class="item-img" style="grid-column: 1/3">
                                <img src="/<%=l.image%>" class="card-img" alt="...">
                            </div>
                            <div class="">
                                <div class="item-body text-center my-2 text-lg font-bold">
                                    <h4>
                                        <%= l.name %>
                                    </h4>
                                </div>
                                <div class="flex f-space-evenly">
                                    <% if(l.locked){ %>
                                        <div class="lesson-pin">
                                            <input type="text" class="form-control" name="studentpin"
                                                placeholder="Add exam pin code">
                                        </div>
                                        <% } %>

                                </div>
                            </div>
                        </a>
                        <% }) %>
                </div>
                <% }else{ %>
                    <p class="alert alert-info">
                        No Lessons available yet, Wait For Us..
                    </p>
                    <% } %>


        </div>
        <%- include('../includes/end.ejs') %>
            <script src="/js/student/checklesson.js"></script>
            <script src="/js/main.js"></script>


</body>

</html>