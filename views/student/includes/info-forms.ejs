<div id="editInfoForm"
    class="hidden fixed top-0 left-0 bg-gray-50 p-3 w-full h-screen text-left z-30 rounded overflow-scroll pb-10">
    <span id="closeForm" onclick="closeUpdateInfoForm()" class="closeUpdateInfoForm ">
        <i class="fas fa-times"></i>
    </span>

    <div class="my-2 p-2 rounded bg-gray-50">
        <h3 class="font-bold mb-2">Update Your Personal Info:</h3>
        <form action="/editPresonalInfo" method="POST" enctype="multipart/form-data">

            <input type="hidden" name="studentId" value="<%= student._id %>">
            <input type="hidden" name="studentIdNotifi" value="<%= user._id %>">
            <div class="form-group">
                <label for="exampleInputPassword1">Name:</label>
                <input class="form-control" type="text" name="updatedName" value="<%=student.name%>" id="">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Mobile:</label>
                <input class="form-control" type="text" name="updatedMobile" value="<%=student.mobile%>" id="">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Parent Number:</label>
                <input class="form-control" type="text" name="updatedParentNo" value="<%=student.parentNo || ''%>"
                    id="">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">School:</label>
                <input class="form-control" type="text" name="updatedSchool" value="<%=student.school || ''%>" id="">
            </div>

            <div class="form-group">
                <label for="exampleInputPassword1">Change Your Grade:</label>
                <select class="form-control" name="updatedGrade" id="exampleFormControlSelect1">
                    <option name="<%= student.grade %>" value="<%= student.grade %>">
                    </option>
                    <option name="1" value="1">1</option>
                    <option name="2" value="2">2</option>
                    <option name="3" value="3">3</option>
                </select>
            </div>

            <div class="form-group">
                <label for="exampleInputPassword1">Change Your Image</label>
                <input class="form-control" type="file" name="image">
            </div>
            <button class="btn btn-success my-2">Update</button>
        </form>
    </div>
    <div class="my-2 p-2 rounded bg-gray-50">
        <h3 class="font-bold mb-2">Change Password</h3>
        <form action="/info/password" method="POST">

            <input type="hidden" name="studentId" value="<%= student._id %>">
            <div class="form-group">
                <label for="oldpass">Old Password:</label>
                <input class="form-control" type="password" name="oldpass" id="oldpass" required>
            </div>

            <div class="form-group">
                <label for="newpass">New Password</label>
                <input class="form-control" type="password" name="newpass" id="newpass" required>

            </div>

            <button class="btn btn-success my-2">Change</button>
        </form>
    </div>
</div>

<script>
    function closeUpdateInfoForm() {
        document.getElementById('editInfoForm').classList.add('hidden')
    }
</script>