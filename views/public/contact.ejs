    <%- include('../includes/public_nav.ejs') %>
        <div class="wrapper" style="padding-top: 100px;">
            <main>
                <!--? Hero Start -->
                <div class="text-center">
                    <h1 class="text-4xl text-center font-bold">Contact us</h1>
                    <div class="my-8">

                        <div class="flex items-center justify-center gap-2 m-auto w-50">
                            <img src="/images/whatsapp.svg" class="w-7">
